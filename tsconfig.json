{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@chat/*": ["src/chat/*"],
      "@commons/*": ["src/commons/*"],
      "@conversation/*": ["src/conversation/*"],
      "@database/*": ["src/database/*"],
      "@message/*": ["src/message/*"],
      "@message_status/*": ["src/message-status/*"],
      "@user/*": ["src/user/*"]
    }
  }
}
